        <div class="carousel-inner">
            @for (var i = 0; i < Model.Banners.Count(); i++)
            {
                if (i == 0)
                {
<div class="carousel-item active">
    <img src="@Url.Content(Model.Banners.ElementAtOrDefault(i).ImagePath)" alt="E-Commerce" style="height:350px;width:100%" />
