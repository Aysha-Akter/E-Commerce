@model FeedbackViewModel
@{ ViewData["Title"] = "Contact Us"; }

@if (@TempData["Status"] != null)
{
<div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    @TempData["Status"]
</div>}

<section class="ftco-section img bg-hero" style="background-image: url(https://a.rgbimg.com/users/j/ja/jaylopez/600/mkwDHxk.jpg) ">
    <div class="container">
        <div class="row justify-content-center">


            <div class="col-lg-6 d-flex align-items-stretch">
                <div class="info-wrap w-0% p-5 mt-5">
                    <h3 class="mb-4" style="color:#007bff;">Contact us</h3>
                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-map-marker"></span>
                        </div>
                        <div class="text pl-4">
                            <p><span>Address:</span> 198 West 21th Street, Narayangong</p>
                        </div>
                    </div>
                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-phone"></span>
                        </div>
                        <div class="text pl-4">
                            <p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
                        </div>
                    </div>

                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-globe"></span>
                        </div>
                        <div class="text pl-4">
                            <p><span>Website</span> <a href="#">yoursite.com</a></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5 mx-auto">
                <div class="contact-form p-md-3 p-2">
                    <div class="contact-image">
                        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
                    </div>
                    <form method="post">
                        <h3>Drop Us a Message</h3>
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input asp-for="Name" class="form-control" placeholder="Your Name *" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control" placeholder="Your Email *" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Phone" class="form-control" placeholder="Your Phone Number *" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <textarea asp-for="Message" class="form-control" placeholder="Your Message *"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}