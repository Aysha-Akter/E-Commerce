@model ProductViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">

    <div class="card mb-3">
        <div class="card-header d-flex flex-row align-items-center justify-content-between">
            <span class="h4 font-weight-bold"> @Model.Name</span>
            <a onclick="window.history.back();" class="btn btn-primary">Back</a>
        </div>
        <div class="card-body">
            <div class="row px-md-5">
                <div class="row">
                    <div class="col-lg-7 mx-auto d-block">
                        <h3 class="title my-1"> @Html.DisplayFor(model => model.Name)</h3>
                        <p class="price-detail-wrap">
                            <span class="price h5 text-warning">

                                <span class="currency">BDT </span><span class="num"> @Html.DisplayFor(model => model.PriceNow)</span>
                                <span class="currency"> ৳</span>
                            </span>
                        </p>
                        <div class="item-property pt-2">
                        </div>
                        <div class="item-property">
                            <span class="price font-weight-bold">
                                <span>Category: @Html.DisplayFor(model => model.SubCategory)</span>
                            </span>
                        </div>
                        <div class="item-property pt-2">
                            <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Description) : </span>
                            <span class=" text-justify">@Html.DisplayFor(model => model.Description)</span>
                        </div>
                        <div class="item-property py-2 m-auto">
                            <div class="card-footer bg-transparent border-0">
                                <div class="product-link">
                                    <form method="post">
                                        <input type="hidden" asp-for="@Model.ID" />
                                        <button type="submit" asp-controller="Cart" asp-action="Add" asp-route-returnUrl="@Context.Request.GetEncodedPathAndQuery()" class="btn-cart btn btn-outline-info mx-3">
                                            <i class="fad fa-shopping-cart"></i>
                                            <span>Add To Cart</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="p-5">
                            <a target="_blank" href="@Url.Content(Model.ImagePath)">
                                <img class="img-fluid" src="@Url.Content(Model.ImagePath)" alt="@Model.Name">
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


